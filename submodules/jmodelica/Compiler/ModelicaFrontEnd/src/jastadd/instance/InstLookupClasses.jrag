        if (myInstClass().isRedeclaredNonSimple())
            return myInstClass().lookupInstClassInInstClassRedeclare(name);
        
        for (InstImport ii : getInstImports()) {
            InstLookupResult<InstClassDecl> res = ii.lookupInstClassInImport(name);
