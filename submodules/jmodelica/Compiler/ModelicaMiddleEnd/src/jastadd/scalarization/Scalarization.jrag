    public FAccess FAccess.scalarize(Scalarizer s, FExp[] indexNames) {
        FAccess access = scalarize(s);
        if (indexNames != null) {
            access = access.asFAccessFull().addFArraySubscripts(getExpandedSubscripts().scalarize(s));
        }
        return access;
    }

